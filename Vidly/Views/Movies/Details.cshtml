@model Vidly.Models.Movie

@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Name == null)
{
    <h3>Movie doesnt exist</h3>
}
else
{
    <h2>@Model.Name</h2>
    <ul>
        <li>Genre: @Model.Genre</li>
        <li>Numb Available: @Model.NumberInStock</li>

    </ul>
}


